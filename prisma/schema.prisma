// SQLite database (no .env required)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  codes     String?
  flavors   String?
  imageUrl  String?
  priceUV   Float?
  priceUP   Float?
  priceFV   Float?
  priceFP   Float?
  sortOrder Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id              Int    @id @default(1)
  categoriesOrder String
}
